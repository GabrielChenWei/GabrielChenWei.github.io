        let flashcardIndex = 0;
        let mcqIndex = 0;

        function nextFlashcard() {
            flashcardIndex = (flashcardIndex + 1) % data.flashcards.length;
            const flashcard = data.flashcards[flashcardIndex];
            document.getElementById('flashcard-content').innerText = `${flashcard.malay} - ${flashcard.english}`;
			playPronunciation(); // 12-Jun-2025, 10.43 AM, added for play Malay Pronunciation, this will play the pronumciation automatically when a flash card is shown;
        }

        function checkQuiz(button) {
            const selectedAnswer = button.innerText;
            const correctAnswer = data.mcq[mcqIndex].answer;
            const answerDiv = document.getElementById('mcq-answer');
            if (selectedAnswer === correctAnswer) {
                answerDiv.innerText = "Correct!";
                answerDiv.style.color = "green";
            } else {
                answerDiv.innerText = `Incorrect! The correct answer is: ${correctAnswer}`;
                answerDiv.style.color = "red";
            }
        }

        
		function nextQuiz() { // 11-Jun-2025, 03.23 PM, modified for flashcard and MCQ randomization
		Â Â Â  mcqIndex = (mcqIndex + 1) % data.mcq.length;
		Â Â Â  const mcq = data.mcq[mcqIndex];
		Â Â Â  document.getElementById('mcq-question').innerText = mcq.question;

		Â Â Â  const options = [...mcq.options]; // clone the array
		Â Â Â  shuffleArray(options); // shuffle the options

		Â Â Â  const optionsDiv = document.querySelector('.mcq-options');
		Â Â Â  optionsDiv.innerHTML = '';
		Â Â Â  options.forEach(option => {
		Â Â Â Â Â Â Â  const button = document.createElement('button');
		Â Â Â Â Â Â Â  button.innerText = option;
		Â Â Â Â Â Â Â  button.className = 'mcq-option';
		Â Â Â Â Â Â Â  button.onclick = () => checkQuiz(button);
		Â Â Â Â Â Â Â  optionsDiv.appendChild(button);
		Â Â Â  });

		Â Â Â  document.getElementById('mcq-answer').innerText = '';
		}

		
		function shuffleArray(array) { // 11-Jun-2025, 03.23 PM, added for flashcard and MCQ randomization
			for (let i = array.length - 1; i > 0; i--) {
				const j = Math.floor(Math.random() * (i + 1));
				[array[i], array[j]] = [array[j], array[i]];
			}
		}

		function playPronunciation() { // 12-Jun-2025, 10.43 AM, added for play Malay Pronunciation
		Â Â Â  const flashcard = data.flashcards[flashcardIndex];
		Â Â Â  const utterance = new SpeechSynthesisUtterance(flashcard.malay);
		Â Â Â  utterance.lang = 'ms-MY'; // Malay language code
		Â Â Â  speechSynthesis.speak(utterance);
		}

		
